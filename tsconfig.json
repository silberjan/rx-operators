{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2022",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2020", "dom"],
    "outDir": "dist"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
